<div class="new-recipe">
<h1>Add new recipe</h1>
<div class="add-recipe-section">
<%= form_with( model: @recipe, url: recipes_path(@user), class: "add-recipe-form") do |f| %>
  <div class="recipe-field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="recipe-field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="recipe-field">
    <%= f.label :preparation_time %>
    <%= f.text_field :preparation_time %>
  </div>

  <div class="recipe-field">
    <%= f.label :cooking_time %>
    <%= f.text_field :cooking_time %>
  </div>
  <div>
    <%= f.label :public %><br>
    <%= f.select :public, options_for_select(['true', 'false']) %>
  </div>
  <%= f.submit "Add" %>
<% end %>
  </div>
</div>
